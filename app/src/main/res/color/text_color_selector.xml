<?xml version="1.0" encoding="utf-8"?>
<!-- Change color of text when clicked -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_selected="false" android:color="@color/colorPrimaryDark"/>
    <item android:state_pressed="true" android:color="@color/colorLightGray"/>
    <item android:state_pressed="false" android:state_selected="true" android:color="@color/colorLightGray"/>
    <item android:color="@color/colorPrimaryDark"/>
</selector>
